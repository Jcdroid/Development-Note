#!/bin/sh
cd `dirname $0`
mkdir mipmap-mdpi
mkdir mipmap-hdpi
mkdir mipmap-xhdpi
mkdir mipmap-xxhdpi
mkdir mipmap-xxxhdpi
cp ic_launcher.png mipmap-mdpi/ic_launcher.png
cp ic_launcher.png mipmap-hdpi/ic_launcher.png
cp ic_launcher.png mipmap-xhdpi/ic_launcher.png
cp ic_launcher.png mipmap-xxhdpi/ic_launcher.png
cp ic_launcher.png mipmap-xxxhdpi/ic_launcher.png
sips -Z 48 mipmap-mdpi/ic_launcher.png
sips -Z 72 mipmap-hdpi/ic_launcher.png
sips -Z 96 mipmap-xhdpi/ic_launcher.png
sips -Z 144 mipmap-xxhdpi/ic_launcher.png
sips -Z 192 mipmap-xxxhdpi/ic_launcher.png
done
